@model PharmacyManagement.Models.Employee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">Chỉnh sửa nhân viên</h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeId" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold"><i class="fas fa-user mr-2"></i> Tên nhân viên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label font-weight-bold"><i class="fas fa-phone mr-2"></i> Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label font-weight-bold"><i class="fas fa-envelope mr-2"></i> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Position" class="control-label font-weight-bold"><i class="fas fa-briefcase mr-2"></i> Chức vụ</label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Salary" class="control-label font-weight-bold"><i class="fas fa-money-bill-alt mr-2"></i> Lương</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i> Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .text-primary {
        color: #6541e1 !important;
    }

    .btn-primary {
        background-color: #6541e1;
        border-color: #6541e1;
    }

        .btn-primary:hover {
            background-color: #509c2f;
            border-color: #509c2f;
        }

    .btn-secondary {
        background-color: #fff;
        border-color: #000;
        color: #000;
    }

        .btn-secondary:hover {
            background-color: #eee;
        }

    .card {
        border: 1px solid #ddd;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}