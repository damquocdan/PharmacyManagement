@model PharmacyManagement.Models.Employee

@{
    ViewData["Title"] = "Thêm Mới Nhân Viên";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-user-tie me-2"></i> Thêm Mới Nhân Viên</h1>

<hr style="border-color: #6541e1;" />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 bg-white rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"><i class="fas fa-id-card me-2" style="color: #6541e1;"></i> Họ Tên</label>
                <input asp-for="Name" class="form-control custom-input" placeholder="Nhập họ tên" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label fw-bold"><i class="fas fa-phone me-2" style="color: #6541e1;"></i> Số Điện Thoại</label>
                <input asp-for="Phone" class="form-control custom-input" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label fw-bold"><i class="fas fa-envelope me-2" style="color: #6541e1;"></i> Email</label>
                <input asp-for="Email" class="form-control custom-input" type="email" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Position -->
            <div class="form-group mb-3">
                <label asp-for="Position" class="control-label fw-bold"><i class="fas fa-briefcase me-2" style="color: #6541e1;"></i> Chức Vụ</label>
                <input asp-for="Position" class="form-control custom-input" placeholder="Nhập chức vụ" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <!-- Salary -->
            <div class="form-group mb-4">
                <label asp-for="Salary" class="control-label fw-bold"><i class="fas fa-money-bill-wave me-2" style="color: #6541e1;"></i> Lương</label>
                <input asp-for="Salary" class="form-control custom-input" type="number" step="0.01" placeholder="Nhập lương" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100" style="background-color: #6541e1; border: none;">
                    <i class="fas fa-save me-2"></i> Tạo Mới
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
        <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
    </a>
</div>

<!-- Custom CSS -->
<style>
    .custom-input {
        border-radius: 8px;
        height: 45px;
        border: 1px solid #6541e1;
        transition: border-color 0.3s ease;
    }

        .custom-input:focus {
            border-color: #509c2f;
            box-shadow: 0 0 5px rgba(80, 156, 47, 0.5);
            outline: none;
        }

    .btn-primary:hover {
        background-color: #509c2f;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    .text-danger {
        font-size: 14px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}