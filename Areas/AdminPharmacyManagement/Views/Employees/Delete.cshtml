@model PharmacyManagement.Models.Employee

@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-trash-alt me-2"></i> Xóa Nhân Viên</h1>

<h3 class="text-danger mb-4"><i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div class="card p-4 bg-white rounded shadow-sm">
    <h4 class="mb-3" style="color: #6541e1;"><i class="fas fa-user-tie me-2"></i> Thông Tin Nhân Viên</h4>
    <hr style="border-color: #6541e1;" />
    <dl class="row">
        <dt class="col-sm-3 fw-bold"><i class="fas fa-id-card me-2" style="color: #6541e1;"></i> Họ Tên</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-phone me-2" style="color: #6541e1;"></i> Số Điện Thoại</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-envelope me-2" style="color: #6541e1;"></i> Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-briefcase me-2" style="color: #6541e1;"></i> Chức Vụ</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-money-bill-wave me-2" style="color: #6541e1;"></i> Lương</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-danger me-2" style="background-color: #dc3545; border: none;">
            <i class="fas fa-trash-alt me-2"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
            <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
        </a>
    </form>
</div>

<!-- Custom CSS -->
<style>
    .card {
        border: 1px solid #6541e1;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    dt {
        color: #000;
    }

    dd {
        color: #333;
    }

    .text-danger {
        font-size: 18px;
    }
</style>