@model PharmacyManagement.Models.Category

@{
    ViewData["Title"] = "Xóa Danh Mục";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-trash-alt me-2"></i> Xóa Danh Mục</h1>

<h3 class="text-danger mb-4"><i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc chắn muốn xóa danh mục này?</h3>

<div class="card p-4 bg-white rounded shadow-sm">
    <h4 class="mb-3" style="color: #6541e1;"><i class="fas fa-folder-open me-2"></i> Thông Tin Danh Mục</h4>
    <hr style="border-color: #6541e1;" />
    <dl class="row">
        <dt class="col-sm-3 fw-bold"><i class="fas fa-folder me-2" style="color: #6541e1;"></i> Tên Danh Mục</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-info-circle me-2" style="color: #6541e1;"></i> Mô Tả</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger me-2" style="background-color: #dc3545; border: none;">
            <i class="fas fa-trash-alt me-2"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
            <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
        </a>
    </form>
</div>

<!-- Custom CSS -->
<style>
    .card {
        border: 1px solid #6541e1;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    dt {
        color: #000;
    }

    dd {
        color: #333;
    }

    .text-danger {
        font-size: 18px;
    }
</style>