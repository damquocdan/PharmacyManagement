@model PharmacyManagement.Models.Category

@{
    ViewData["Title"] = "Thêm Mới Danh Mục";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-folder-plus me-2"></i> Thêm Mới Danh Mục</h1>

<hr style="border-color: #6541e1;" />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 bg-white rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Category Name -->
            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="control-label fw-bold"><i class="fas fa-folder me-2" style="color: #6541e1;"></i> Tên Danh Mục</label>
                <input asp-for="CategoryName" class="form-control custom-input" placeholder="Nhập tên danh mục" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label fw-bold"><i class="fas fa-info-circle me-2" style="color: #6541e1;"></i> Mô Tả</label>
                <input asp-for="Description" class="form-control custom-input" placeholder="Nhập mô tả" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100" style="background-color: #6541e1; border: none;">
                    <i class="fas fa-save me-2"></i> Tạo Mới
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
        <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
    </a>
</div>

<!-- Custom CSS -->
<style>
    .custom-input {
        border-radius: 8px;
        height: 45px;
        border: 1px solid #6541e1;
        transition: border-color 0.3s ease;
    }

        .custom-input:focus {
            border-color: #509c2f;
            box-shadow: 0 0 5px rgba(80, 156, 47, 0.5);
            outline: none;
        }

    .btn-primary:hover {
        background-color: #509c2f;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    .text-danger {
        font-size: 14px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}