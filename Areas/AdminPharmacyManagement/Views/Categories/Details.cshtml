@model PharmacyManagement.Models.Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-folder-open me-2"></i> Chi Tiết Danh Mục</h1>

<hr style="border-color: #6541e1;" />

<div class="card p-4 bg-white rounded shadow-sm">
    <h4 class="mb-3" style="color: #6541e1;"><i class="fas fa-info-circle me-2"></i> Thông Tin Danh Mục</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-bold"><i class="fas fa-folder me-2" style="color: #6541e1;"></i> Tên Danh Mục</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

        <dt class="col-sm-3 fw-bold"><i class="fas fa-info-circle me-2" style="color: #6541e1;"></i> Mô Tả</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary me-2" style="background-color: #6541e1; border: none;">
        <i class="fas fa-edit me-2"></i> Chỉnh Sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
        <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
    </a>
</div>

<!-- Custom CSS -->
<style>
    .card {
        border: 1px solid #6541e1;
    }

    .btn-primary:hover {
        background-color: #509c2f;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    dt {
        color: #000;
    }

    dd {
        color: #333;
    }
</style>