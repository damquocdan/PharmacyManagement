@model PharmacyManagement.Models.Admin

@{
    ViewData["Title"] = "Thêm Mới Admin";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<h1 class="mb-4" style="color: #6541e1;"><i class="fas fa-user-plus me-2"></i> Thêm Mới Admin</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 bg-white rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Username -->
            <div class="form-group mb-3">
                <label asp-for="Username" class="control-label fw-bold"><i class="fas fa-user me-2" style="color: #6541e1;"></i> Tên Đăng Nhập</label>
                <input asp-for="Username" class="form-control custom-input" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label fw-bold"><i class="fas fa-lock me-2" style="color: #6541e1;"></i> Mật Khẩu</label>
                <input asp-for="Password" class="form-control custom-input" type="password" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"><i class="fas fa-id-card me-2" style="color: #6541e1;"></i> Họ Tên</label>
                <input asp-for="Name" class="form-control custom-input" placeholder="Nhập họ tên" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label fw-bold"><i class="fas fa-envelope me-2" style="color: #6541e1;"></i> Email</label>
                <input asp-for="Email" class="form-control custom-input" type="email" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label fw-bold"><i class="fas fa-phone me-2" style="color: #6541e1;"></i> Số Điện Thoại</label>
                <input asp-for="Phone" class="form-control custom-input" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- UpdatedAt -->
            <div class="form-group mb-4">
                <label asp-for="UpdatedAt" class="control-label fw-bold"><i class="fas fa-calendar-alt me-2" style="color: #6541e1;"></i> Ngày Cập Nhật</label>
                <input asp-for="UpdatedAt" class="form-control custom-input" type="datetime-local" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100" style="background-color: #6541e1; border: none;">
                    <i class="fas fa-save me-2"></i> Tạo Mới
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #509c2f; border: none; color: #fff;">
        <i class="fas fa-arrow-left me-2"></i> Quay Lại Danh Sách
    </a>
</div>

<!-- Custom CSS -->
<style>
    .custom-input {
        border-radius: 8px;
        height: 45px;
        border: 1px solid #6541e1;
        transition: border-color 0.3s ease;
    }

    .custom-input:focus {
        border-color: #509c2f;
        box-shadow: 0 0 5px rgba(80, 156, 47, 0.5);
        outline: none;
    }

    .btn-primary:hover {
        background-color: #509c2f;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #6541e1;
        transition: background-color 0.3s ease;
    }

    .text-danger {
        font-size: 14px;
    }

    hr {
        border-color: #6541e1;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}