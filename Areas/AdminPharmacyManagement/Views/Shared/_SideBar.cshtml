@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<aside class="main-sidebar sidebar-custom elevation-4 position-fixed" style="background-color: #fff; color: #000;">
    <!-- Brand Logo -->
    <a href="/adminPharmacyManagement/dashboard" class="brand-link" style="background-color: #6541e1; color: #fff;">
        <img src="~/images/logo.png" alt="Logo" width="75px">
        <span class="brand-text font-weight-light ms-2">Quản Lý Nhà Thuốc</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar User Panel -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex position-fixed bottom-0" style="border-top: 1px solid #6541e1; width: 280px;">
            <div class="image">
                <img src="~/images/Logo.png" class="img-circle elevation-2" alt="Logo">
            </div>
            <div class="info">
                @if (HttpContextAccessor.HttpContext.Session.GetString("AdminLogin") != null)
                {
                    <a href="#" class="d-block text-dark">@HttpContextAccessor.HttpContext.Session.GetString("AdminLogin")</a>
                    <a asp-action="Logout" asp-controller="Login" class="btn btn-sm btn-danger mt-1" style="background-color: #509c2f; border: none;">
                        <i class="fas fa-sign-out-alt"></i> Đăng Xuất
                    </a>
                }
                else
                {
                    <a href="#" class="d-block text-dark">Duc Anh</a>
                }
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Admin Accounts -->
                <li class="nav-item">
                    <a href="#" class="nav-link" style="color: #000;">
                        <div class="d-flex align-items-center">
                            <div class="icon-container me-2" style="width: 30px; color: #6541e1;">
                                <i class="fa-solid fa-user-tie fa-lg"></i>
                            </div>
                            <p>Tài Khoản Admin <i class="right fas fa-angle-down"></i></p>
                        </div>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Admins" asp-action="Index" class="nav-link" style="color: #000;">
                                <i class="fas fa-list nav-icon" style="color: #509c2f;"></i>
                                <p>Danh Sách</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Admins" asp-action="Create" class="nav-link" style="color: #000;">
                                <i class="fas fa-plus-circle nav-icon" style="color: #509c2f;"></i>
                                <p>Thêm Mới</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Customer Management -->
                <li class="nav-item">
                    <a href="#" class="nav-link" style="color: #000;">
