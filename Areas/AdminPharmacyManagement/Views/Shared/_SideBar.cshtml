<style>
    .main-sidebar {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .nav-link:hover {
        background-color: #6541e1 !important;
        color: #fff !important;
        transition: all 0.3s ease;
    }

        .nav-link:hover i {
            color: #fff !important;
        }

    .nav-treeview .nav-link {
        padding-left: 3rem;
    }

        .nav-treeview .nav-link:hover {
            background-color: #509c2f !important;
            color: #fff !important;
        }

    .brand-link:hover {
        opacity: 0.9;
    }

    .icon-container {
        display: flex;
