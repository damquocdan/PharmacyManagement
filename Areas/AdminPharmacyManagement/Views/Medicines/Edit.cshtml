@model PharmacyManagement.Models.Medicine

@{
    ViewData["Title"] = "Chỉnh sửa thuốc";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">Chỉnh sửa thuốc</h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MedicineId" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold"><i class="fas fa-pills mr-2"></i> Tên thuốc</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label font-weight-bold"><i class="fas fa-file-alt mr-2"></i> Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Manufacturer" class="control-label font-weight-bold"><i class="fas fa-industry mr-2"></i> Nhà sản xuất</label>
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label font-weight-bold"><i class="fas fa-dollar-sign mr-2"></i> Giá bán</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CostPrice" class="control-label font-weight-bold"><i class="fas fa-dollar-sign mr-2"></i> Giá nhập</label>
                    <input asp-for="CostPrice" class="form-control" />
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label font-weight-bold"><i class="fas fa-warehouse mr-2"></i> Tồn kho</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExpiryDate" class="control-label font-weight-bold"><i class="fas fa-calendar-alt mr-2"></i> Hạn sử dụng</label>
                    <input asp-for="ExpiryDate" class="form-control" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usage" class="control-label font-weight-bold"><i class="fas fa-prescription-bottle-alt mr-2"></i> Cách dùng</label>
                    <input asp-for="Usage" class="form-control" />
                    <span asp-validation-for="Usage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label font-weight-bold"><i class="fas fa-list-ul mr-2"></i> Danh mục</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label font-weight-bold"><i class="fas fa-image mr-2"></i> Hình ảnh</label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i> Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .text-primary {
        color: #6541e1 !important;
    }

    .btn-primary {
        background-color: #6541e1;
        border-color: #6541e1;
    }

        .btn-primary:hover {
            background-color: #509c2f;
            border-color: #509c2f;
        }

    .btn-secondary {
        background-color: #fff;
        border-color: #000;
        color: #000;
    }

        .btn-secondary:hover {
            background-color: #eee;
        }

    .card {
        border: 1px solid #ddd;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}