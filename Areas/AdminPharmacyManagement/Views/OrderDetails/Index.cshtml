@model IEnumerable<PharmacyManagement.Models.OrderDetail>

@{
    ViewData["Title"] = "Danh sách chi tiết đơn hàng";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">Danh sách chi tiết đơn hàng</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus mr-2"></i> Thêm mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th><i class="fas fa-boxes mr-2"></i> @Html.DisplayNameFor(model => model.Quantity)</th>
                    <th><i class="fas fa-dollar-sign mr-2"></i> @Html.DisplayNameFor(model => model.Price)</th>
                    <th><i class="fas fa-pills mr-2"></i> @Html.DisplayNameFor(model => model.Medicine)</th>
                    <th><i class="fas fa-file-invoice-dollar mr-2"></i> @Html.DisplayNameFor(model => model.Order)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medicine.MedicineId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Order.OrderId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .text-primary {
        color: #6541e1 !important;
    }

    .btn-success {
        background-color: #509c2f;
        border-color: #509c2f;
    }

        .btn-success:hover {
            background-color: #3f7b24;
            border-color: #3f7b24;
        }

    .btn-primary {
        background-color: #6541e1;
        border-color: #6541e1;
    }

        .btn-primary:hover {
            background-color: #509c2f;
            border-color: #509c2f;
        }

    .btn-info {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-info:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .table-responsive {
        overflow-x: auto;
    }
</style>