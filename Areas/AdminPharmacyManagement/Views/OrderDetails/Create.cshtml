@model PharmacyManagement.Models.OrderDetail

@{
    ViewData["Title"] = "Thêm chi tiết đơn hàng";
    Layout = "~/Areas/AdminPharmacyManagement/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">Thêm chi tiết đơn hàng</h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OrderId" class="control-label font-weight-bold"><i class="fas fa-file-invoice-dollar mr-2"></i> Mã đơn hàng</label>
                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="MedicineId" class="control-label font-weight-bold"><i class="fas fa-pills mr-2"></i> Tên thuốc</label>
                    <select asp-for="MedicineId" class="form-control" asp-items="ViewBag.MedicineId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label font-weight-bold"><i class="fas fa-boxes mr-2"></i> Số lượng</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label font-weight-bold"><i class="fas fa-dollar-sign mr-2"></i> Giá tiền</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i> Thêm chi tiết</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .text-primary {
        color: #6541e1 !important;
    }

    .btn-primary {
        background-color: #6541e1;
        border-color: #6541e1;
    }

        .btn-primary:hover {
            background-color: #509c2f;
            border-color: #509c2f;
        }

    .btn-secondary {
        background-color: #fff;
        border-color: #000;
        color: #000;
    }

        .btn-secondary:hover {
            background-color: #eee;
        }

    .card {
        border: 1px solid #ddd;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}