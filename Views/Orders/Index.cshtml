@model IEnumerable<PharmacyManagement.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-title {
        font-size: 2rem;
        color: #6541e1; /* Màu tím chủ đạo của hiệu thuốc */
        text-align: center;
        margin-bottom: 20px;
    }

    /* Table Styling */
    .orders-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .orders-table th,
        .orders-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .orders-table th {
            background-color: #6541e1; /* Màu tím chủ đạo của hiệu thuốc */
            color: #fff;
            font-size: 1rem;
        }

        .orders-table tr:nth-child(even) {
            background-color: #f8f8f8;
        }

        .orders-table td {
            font-size: 0.9rem;
            color: #555;
        }

    /* Status Styling */
    .status {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.85rem;
        font-weight: bold;
        text-align: center;
    }

        .status.paid {
            background-color: #28a745; /* Green for paid */
            color: #fff;
        }

        .status.unpaid {
            background-color: #dc3545; /* Red for unpaid */
            color: #fff;
        }

    /* No Orders Message */
    .no-orders {
        text-align: center;
        font-size: 1.2rem;
        color: #555;
        margin-top: 20px;
    }
</style>

<h1 class="page-title">Danh sách đơn hàng</h1>

@if (Model.Any())
{
    <table class="table orders-table">
        <thead>
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Ngày Đặt</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <span class="status @((order.Status == "Chuyển khoản") ? "Chuyển khoản" : "Tiền mặt")">
                            @((order.Status == "Chuyển khoản") ? "Chuyển khoản" : "Tiền mặt")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-orders">Bạn chưa có đơn hàng nào.</p>
}